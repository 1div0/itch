{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Main Process",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/src/main.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "runtimeArgs": [
                "."
            ],
            "env": {
                "ITCH_LOG_LEVEL": "debug",
                "ITCH_REACT_FRUGAL": "0",
                "NODE_ENV": "development",
                "DEVTOOLS": "0"
            },
            "console": "integratedTerminal",
            "sourceMaps": true,
            "protocol": "inspector"
        },
        {
            "name": "Main Process (Review purity of components)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/src/main.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "runtimeArgs": [
                "."
            ],
            "env": {
                "ITCH_LOG_LEVEL": "debug",
                "ITCH_REACT_FRUGAL": "1",
                "DEVTOOLS": "1"
            },
            "console": "integratedTerminal",
            "sourceMaps": true,
            "protocol": "inspector"
        },
        {
            "name": "Main Process (Local Instance)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/src/main.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "runtimeArgs": [
                "."
            ],
            "env": {
                "WHEN_IN_ROME": "http://localhost.com:8080",
                "ITCH_LOG_LEVEL": "debug"
            },
            "console": "integratedTerminal",
            "sourceMaps": true,
            "protocol": "inspector"
        },
        {
            "name": "Renderer Process",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/src/main.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "runtimeArgs": [
                ".",
                "--remote-debugging-port=9222"
            ],
            "env": {
                "ITCH_LOG_LEVEL": "debug"
            },
            "console": "integratedTerminal",
            "sourceMaps": false,
            "protocol": "inspector",
            "port": 9222
        },
        {
            "name": "Renderer Process (Local Instance)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/src/main.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "runtimeArgs": [
                ".",
                "--remote-debugging-port=9222"
            ],
            "env": {
                "ITCH_LOG_LEVEL": "debug",
                "WHEN_IN_ROME": "http://localhost.com:8080"
            },
            "console": "integratedTerminal",
            "sourceMaps": false,
            "protocol": "inspector",
            "port": 9222
        },
        {
            "name": "Unit Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/src/main.js",
            "stopOnEntry": false,
            "args": ["--run-unit-tests", "--thorough"],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "runtimeArgs": [
                "."
            ],
            "env": {
                "NODE_ENV": "test"
            },
            "console": "integratedTerminal",
            "sourceMaps": true,
            "protocol": "inspector"
        }
    ]
}