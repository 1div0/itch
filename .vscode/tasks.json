{
  "version": "0.1.0",
  "tasks": [
    {
      "taskName": "compile",
      "command": "node_modules/.bin/tsc",
      "windows":{
        "command": "node_modules\\.bin\\tsc"
      },
      "isShellCommand": true,
      "args": [
        "-w",
        "-p",
        ".",
        "--noEmit",
        "--skipLibCheck"
      ],
      "showOutput": "silent",
      "isBackground": true,
      "isBuildCommand": true,
      "problemMatcher": "$tsc-watch"
    },
    {
      "taskName": "test",
      "command": "npm",
      "isShellCommand": true,
      "args": [
        "test",
        "--",
        "-w"
      ],
      "showOutput": "silent",
      "isBackground": true,
      "isTestCommand": true,
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "pattern": {
          "regexp": "^âœ˜ ([^\\:]+)\\:([^\\:]+)\\:([^\\:]+)\\: (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      }
    }
  ]
}