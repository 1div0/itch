{
  "application/javascript": {
    "passthrough": true
  },
  "text/typescript": {
    "target": "es2017",
    "lib": ["dom", "es6"],
    "module": "commonjs",
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "coverage": {
      "exclude": ["**/*.spec.ts"]
    },
    "babel": {
      "presets": ["async-to-bluebird"],
      "plugins": ["transform-es2015-modules-commonjs"]
    }
  }
}
