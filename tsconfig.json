{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "app",
        "target": "es2017",
        "lib": ["dom", "es6"],
        "module": "commonjs",
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "inlineSourceMap": true,
        "jsx": "react",
        "allowJs": true
    },
    "exclude": [
        "build",
        "stage",
        "node_modules",
        "fixtures",
        "dist"
    ]
}
